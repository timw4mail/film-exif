# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Global settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true

[package.json]
indent_size = 2
indent_style = space

# If i ever MUST use a yaml file
[*.yml, *.yaml]
indent_size = 2
indent_style = space
