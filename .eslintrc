{
	"env": {
		"browser": true,
		"node": true,
		"shared-node-browser": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:inferno/recommended",
		"eslint-config-happiness"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"import/extensions": 0,
		"import/no-extraneous-dependencies": 0,
		"import/no-unresolved": [2, { "ignore": ["electron"] }],
		"linebreak-style": 0,
		"react/prefer-stateless-function": 0,
		"no-console": 0
	}
}
